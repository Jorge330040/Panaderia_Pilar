<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prueba33.RecoverPasswordPage"
             BackgroundColor="White">

    <ScrollView>
        <StackLayout Padding="30" Spacing="20">

            <!-- Logo con borde ajustado -->
            <Frame Padding="5" HasShadow="False" CornerRadius="15" BackgroundColor="White" HorizontalOptions="Center">
                <Image Source="logo.png" HeightRequest="80" WidthRequest="80" Aspect="AspectFit"/>
            </Frame>

            <Label Text="Recuperar Contraseña" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
            <Label Text="Ingrese su nombre de usuario y su color favorito para recuperar la contraseña." 
                   FontSize="Small" 
                   HorizontalOptions="Center" 
                   TextColor="Gray"
                   HorizontalTextAlignment="Center"/>

            <!-- Campos de entrada con mejor estilo -->
            <Frame Padding="5" CornerRadius="10" BorderColor="Gray">
                <Entry x:Name="usernameEntry" 
                       Placeholder="Nombre de Usuario" 
                       TextColor="Black" 
                       PlaceholderColor="Gray"/>
            </Frame>

            <Frame Padding="5" CornerRadius="10" BorderColor="Gray">
                <Entry x:Name="favoriteColorEntry" 
                       Placeholder="Color Favorito" 
                       TextColor="Black" 
                       PlaceholderColor="Gray"/>
            </Frame>

            <!-- Botón con diseño mejorado -->
            <Button Text="Recuperar Contraseña" 
                    Clicked="OnRecoverPasswordButtonClicked" 
                    BackgroundColor="#FF5A5F" 
                    TextColor="White" 
                    CornerRadius="10"/>

            <!-- Enlace para volver al inicio de sesión -->


        </StackLayout>
    </ScrollView>
</ContentPage>